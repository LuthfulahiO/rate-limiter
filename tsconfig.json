{
  "compilerOptions": {
    "module": "commonjs",
    "skipLibCheck": true,
    "removeComments": true,
    "esModuleInterop": true,
    "lib": [
      "es2019"
    ],
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules"
  ]
}